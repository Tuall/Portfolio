{
  "name": "bubbly-boilerplate",
  "version": "1.1.0",
  "description": "A bubbly boilerplate",
  "main": "index.js",
  "scripts": {
    "init-app": "yarn && mkdir public && yarn move-files && webpack --config build/dev/webpack.config.dev.js",
    "start": "yarn watch",
    "watch": "npm-run-all html-build move-files -p webpack-dev",
    "build": "yarn webpack-prod",
    "deploy": "npm-run-all html-build webpack-prod pre-deploy git-deploy post-deploy",
    "pre-deploy": "mkdir temp && cp -r ./public/. ./temp/",
    "git-deploy": "git add temp/ && git commit -m \"new deployment\" && git push ghp `git subtree split --prefix temp`:master --force",
    "post-deploy": "rm -rf temp && git reset --hard HEAD~1",
    "move-files": "cp -r ./serviceworker.js ./manifest.json  ./appIcon ./fonts ./images ./public",
    "html-build": "jade jade/views/*.jade --out public",
    "webpack-dev": "webpack-dev-server -w --progress --colors --config build/dev/webpack.config.dev.js",
    "webpack-prod": "webpack --config build/prod/webpack.config.prod.js",
    "prettier": "prettier --config .prettierrc.json --write \"src/**/*.js\"",
    "lint": "eslint ./src --fix",
    "lint-css": "stylelint --fix /\"./styles/**/*.css\" \"./src/**/*.css\""
  },
  "author": "Alex L",
  "license": "ISC",
  "dependencies": {
    "jade": "^1.11.0"
  },
  "devDependencies": {
    "abyssa": "^8.0.3",
    "animejs": "^2.0.1",
    "babel": "^6.23.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.4.0",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "css-loader": "^0.27.1",
    "css-mqpacker": "^4.0.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "npm-run-all": "^3.1.1",
    "postcss": "^5.2.5",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-flexbox": "^1.0.2",
    "postcss-import": "^9.1.0",
    "postcss-inline-svg": "^2.3.0",
    "postcss-load-config": "^1.2.0",
    "postcss-loader": "^1.3.3",
    "postcss-mixins": "^5.4.1",
    "postcss-pxtorem": "^3.3.1",
    "postcss-reporter": "^3.0.0",
    "prettier": "1.12.1",
    "prop-types": "15.6.0",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-hyperscript": "^3.0.0",
    "react-transition-group": "^2.2.0",
    "rucksack-css": "^0.9.1",
    "space-lift": "0.6.2",
    "style-loader": "0.13.2",
    "stylelint": "9.2.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-concentric-order": "3.3.1",
    "unstated": "^1.0.3",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  }
}
